	cursor default

	font-family 'Open Sans', sans-serif


/*** HEADER STYLES ***/

.header
	&-row
		clearfix()
		&--top
			margin-bottom 20px
		&--middle
			background-color color-red
	&-col
		position relative
		float left

		width 33.333%
		height 90px
		.row-social
			height 35%
			width 410px
		&--row
			display block

			width 100%
			height 50%

			line-height 16px

			font-size 12px

.col-row--top
	margin-top 7px
	margin-bottom 2px

.header
	&-logo
		position absolute
		top 10px
	&-name
		position absolute

		top 32px
		left 80px

		font-weight bold
		font-size 24px
		color color-red
		text-transform uppercase
	&-contacts
		display block

		color color-red
		font-size 14px
		a:nth-child(2)
			margin-left 10px
	&-search
		position relative
		width 396px

		&-item
			padding 12px
			width 100%

			box-sizing border-box

			border 1px solid #cccccc
			font-size 16px

			color #000

			transition border-color 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)

			&:hover,&:focus
				border-color #585858

		&-submit
			position absolute
			display block

			top 1px
			bottom 1px
			right 10px

			background none
			border none
			cursor pointer

			transition all 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94)
			&:hover
				transform  rotate(25deg);

	&-bar
		.user-bar-item
			margin-right 34px

			font-size 12px
			font-weight bold

			text-transform uppercase
	&-bar
		display inline-block
		width 48%

.header-social
	display inline-block
	width 50%

	&-item
		margin-right 32px
		position relative

		overflow hidden
		text-indent -9999px

		transition all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)

		&:last-child
			margin 0

		&:before
			position absolute
			top 0
			left 0

			transition opacity 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)

			opacity 1
		&:after
			position absolute
			top 0
			left 0

			transition opacity 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)

			opacity 0

		&:hover
			&:before
				opacity 0
			&:after
				opacity 1


/*** main menu ***/

.header-menu
	position relative
	margin-left 42px
	z-index 100
	&-item-holder
		position:static
		display inline-block

		vertical-align top
		text-align left
	&-item
		display block
		padding 25px 30px
		text-decoration none
		font-size 14px
		color #fff
		text-transform uppercase
		transition background-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)
		&:hover
			background-color #191919
	.hovered
		.header-menu-level1,.header-menu-item
			background-color #191919
			.header-menu-level1-inner
				opacity 1
				filter none
				transform translateY(0)

.header-menu-level1
	position absolute
	left 0
	display none
	box-sizing border-box
	width 370px
	padding 30px 30px

	transition background-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&-inner
		position relative
		overflow hidden
		opacity 0
		transform translateY(20px)
		transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&-item-holder
		padding 15px 0
		a
			text-decoration none
			color #fff
			border-bottom 1px solid transparent
			transition all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94)
			&:hover
				border-bottom-color color-red
				color color-red
/*** //main menu ****/


/*** header slider ***/
.sections
	.sections-item:hover.sections-item:after
		opacity 0

	.sections-item-container
		overflow hidden

	.sections-item
		position relative
		display block

		background-repeat no-repeat
		background-position center center
		background-size cover

		transition transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)

		&:hover
			transform scale(1.1)
			z-index 100

		&:before
			content ""

			display block
			padding-top 100%
		&:after
			content ""
			position absolute

			bottom 0
			left 0
			right 0
			top 0

			opacity 0.4
			background linear-gradient(to top, #000 15%, transparent 50%)

			transition opacity 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)



		.sections-item-text
			position absolute
			top 70%
			width 100%

			text-align center
			text-decoration none
			font-size 24px
			font-weight bold

			color #fff

			z-index 20

/* buttons arrow */

	.sections-arrow
		position absolute
		top 44%

		width 46px
		height 46px

		z-index 20

		&:before,&:after
			position absolute
			left 2%
			top 4%

			transition opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	.sections-arrow-prev
		left 20px

		&:before
			opacity 1
			filter none

		&:after
			opacity 0

	.sections-arrow-next
		right 20px

		&:before
			opacity 1
			filter none

		&:after
			opacity 0


button:hover.sections-arrow-prev:before,
button:hover.sections-arrow-next:before
	opacity 0

button:hover.sections-arrow-prev:after,
button:hover.sections-arrow-next:after
	opacity 1
	filter none

/* //buttons arrow */

