/*** template form ***/

.form
	&-row
		clearfix()
		display block
		width 100%

	.form-item--submit
		padding 15px 50px
		box-sizing border-box

		background red

		color #fff

		font-size 18px
		font-weight bold

		transition opacity 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
		&:hover
			opacity 0.5

	.jcf-select
		position relative
		display block

		width: 100%
		padding 15px 10px

		box-sizing border-box
		background #fff

		border 1px solid #9e9e9e

		transition all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
		cursor pointer

		&:hover
			border 1px solid #000

		.jcf-select-text
			font-size 16px

		.jcf-select-opener
			position absolute
			top 20px
			right 20px

			width 0
			height 0

			border-top 8px solid black
			border-left 4px solid transparent
			border-right 4px solid transparent

			transition all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)

	.jcf-select.jcf-drop-active .jcf-select-opener
		transform rotate(180deg)

	.form-item-holder
		width 100%
		margin-bottom 10px

		&--w2
			width 49%
			float left

			margin-right 2%

			&:last-child
				margin-right 0

		&--w1
			width 100%

		&--w3
			width 32%
			float left

			margin-right 2%

			&:last-child
				margin-right 0
		&--w4
			width 23%
			float left

			margin-right 2%

			&:last-child
				margin-right 0
		.form-item
			width 100%
			padding 15px 10px
			box-sizing border-box

			border 1px solid #9e9e9e
			transition all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)

			&::-webkit-input-placeholder
				color #333

				opacity 1

				font-size 16px

				transition opacity .2s cubic-bezier(0.250, 0.460, 0.450, 0.940), transform .1s cubic-bezier(0.250, 0.460, 0.450, 0.940)
			&:hover
				border 1px solid #000

				&::-webkit-input-placeholder
					transform translateY(-3px)

			&:focus
				border 1px solid #000

				&::-webkit-input-placeholder
					opacity 0

					transform translateY(10px)
			&--textarea
				resize none

.jcf-select-drop-content
	background #fff
	border 1px solid #000
	.jcf-list-content
